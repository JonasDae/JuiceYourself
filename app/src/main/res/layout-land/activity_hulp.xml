<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hulp">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_hulp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_marginTop="50dp"
            android:id="@+id/hulp_titel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:textStyle="bold|italic"
            android:layout_marginLeft="20dp"
            android:text="@string/hulp_titel"
            />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/hulp_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="22dp"
            android:text="@string/hulp_text"
            android:layout_below="@+id/hulp_titel"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/hulp_ontwikkelaars"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="22dp"
            android:textStyle="bold|italic"
            android:text="@string/hulp_ontwikkelaars"
            android:layout_below="@+id/hulp_text"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/ontwikkelaar1_naam"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:text="@string/ontwikkelaar1_naam"
            android:layout_below="@+id/hulp_ontwikkelaars"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/ontwikkelaar1_mail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:text="@string/ontwikkelaar1_mail"
            android:layout_below="@+id/ontwikkelaar1_naam"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/ontwikkelaar2_naam"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:text="@string/ontwikkelaar2_naam"
            android:layout_below="@+id/ontwikkelaar1_mail"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/ontwikkelaar2_mail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:text="@string/ontwikkelaar2_mail"
            android:layout_below="@+id/ontwikkelaar2_naam"/>

    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>